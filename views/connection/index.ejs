<%- include('../partials/header.ejs')%>
<h2 class='center-text'>Connections Page</h2>
<div class='text-area'>
    <% if (connections.length > 0) { %>
        <%for (let n = 0; n < connections[0].length; n++) {%>
            <h4><%= connections[0][n] %></h4>
            <ul>
                <% for (let i = 0; i < connections[n+1].length; i++) { %>
                    <a href="connections/<%= connections[n+1][i].id %>"><li><%= connections[n+1][i].name %></li></a>
                <% } %>
            </ul>
        <% } %>
    <% } else { %>
        <h4>No events at this time.</h4>
    <% } %>
</div>
<%- include('../partials/footer.ejs')%>