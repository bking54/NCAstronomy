<%- include('../partials/header.ejs')%>
<h2 class='center-text'>Connection Page</h2>
<div class='text-area top-margin'>
    <div class='event'>
        <div class='title-area'>
            <h3><%= con.name + ' ----- RSVPs: ' + numResults%></h3>
            <% if (user && user == con.host._id) { %>
            <form action='/connections/<%= con.id %>/edit' method='GET'>
                <button>Update</button>
            </form>
            <form action='/connections/<%= con.id %>?_method=DELETE' method='POST'>
                <button>Delete</button>
            </form>
            <% } else if (user) { %>
            <form action='/connections/<%= con.id %>/rsvp' method='POST'>
                <button>RSVP</button>
            </form>
            <% } %>
        </div>
        <div class='info-area'>
            <div class='image-div'>
                <img alt='No image upload' src='<%= con.imageURL %>' class='connection-image'>
            </div>
            <div class='connection-info'>
                <p class='info'>Hosted by <%= con.host.firstName %></p>
                <p class='info'><%= con.date %></p>
                <p class='info'><%= con.start %> - <%= con.end %> EST</p>
                <p class='info' id='info-last'><%= con.location %></p>
            </div>
        </div>
        <div class='description-area'>
            <h4>Description</h4>
            <p><%= con.details %></p>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs')%>