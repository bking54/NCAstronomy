<%- include('../partials/header.ejs')%>
        <div id="content">
            <h2>Create an account</h2>
            <form action = '/users/new' method = 'POST'>
                <table>
                    <tr>
                        <td><label for="firstName">First Name</label></td>
                        <td><input type="text" id="firstName" name="firstName" class = "fixed-width" required></td>
                    </tr>
                    <tr>
                        <td><label for="lastName">Last Name</label></td>
                        <td><input type="text" id="lastName" name="lastName" class = "fixed-width" required></td>
                    </tr>
                    <tr>
                        <td><label for="email">Email</label></td>
                        <td><input type="text" id="email" name="email" class = "fixed-width" required></td>
                    </tr>
                    <tr>
                        <td><label for="password">Password</label></td>
                        <td><input type="text" id="password" name="password" class = "fixed-width" required minlength="8" maxlength="64"></td>
                    </tr>
                    <tr>
                        <td colspan="2" class = "align-right"><button>Submit</button></td>
                    </tr>
                </table>        
            </form>
        </div>
<%- include('../partials/footer.ejs')%>